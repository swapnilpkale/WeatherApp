<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/layout_margin_left"
    android:layout_marginRight="@dimen/layout_margin_right"
    tools:context="com.project.swapnil.weather.dashboard.DashboardActivity">

    <LinearLayout
        android:id="@+id/fullscreen_content_controls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText android:id="@+id/dashboard_inputSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@android:drawable/ic_menu_search"
            android:hint="@string/search_city_hint"
            android:inputType="textVisiblePassword"/>
        <Button
            android:layout_width="match_parent"
            android:id="@+id/dashboard_search_button"
            android:layout_height="wrap_content"
            android:text="@string/search_button_text"/>

        <TextView
            android:id="@+id/dashboard_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="normal"
            android:layout_gravity="center_horizontal"
            android:padding="10dp"
            android:textSize="40sp"
            android:textColor="@android:color/holo_blue_dark"
            android:text="@string/default_location"
            tools:text="Detroit"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black_overlay"/>

        <TextView
            android:id="@+id/dashboard_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textStyle="normal"
            android:padding="10dp"
            android:textSize="15sp"
            tools:text="Last Updated On : Oct 10, 18:00"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/dashboard_temperature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textStyle="normal"
                    android:padding="10dp"
                    android:textSize="50sp"
                    android:text="14`C"
                    tools:text="14*C"/>
                <TextView
                    android:id="@+id/dashboard_min_temperature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textStyle="normal"
                    android:textSize="15sp"
                    android:text="14`C"
                    tools:text="14*C"/>
                <TextView
                    android:id="@+id/dashboard_max_temperature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textStyle="normal"
                    android:textSize="15sp"
                    android:text="14`C"
                    tools:text="14*C"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/dashboard_weather_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@mipmap/sample_weather_icon"/>
                <TextView
                    android:id="@+id/dashboard_weather_main"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="normal"
                    android:paddingTop="10dp"
                    android:layout_gravity="center"
                    android:textSize="20sp"
                    android:textAlignment="center"
                    android:text="Raining"
                    tools:text="Rain"/>
                <TextView
                    android:id="@+id/dashboard_weather_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="normal"
                    android:padding="10dp"
                    android:textAlignment="center"
                    android:textSize="15sp"
                    android:text="Light rain expected"
                    tools:text="Light rain expected"/>
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>
    <android.support.v4.widget.ContentLoadingProgressBar
        android:id="@+id/dashboard_progress_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        style="?android:attr/android:progressBarStyleHorizontal"
        tools:visibility="visible">
    </android.support.v4.widget.ContentLoadingProgressBar>
</FrameLayout>
